<!-- This is a complete record history for current user -->


<% if @kind != nil %>
<h1 class="center-text"><%= @kind + " Records" %></h1>

<% else %>
<h1 class="center-text"><%= "All Failure Records" %></h1>
<% end %>

<section class="container">
  <table>
    <thead>
      <tr style="background-color: orange; color: white;">
        <th>Type</th>
        <th>Count</th>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>

    <tbody>
      <% @failures.each do |failure| %>
      <% if failure.count > 0 %>
      <tr>
        <td><%= failure.kind %></td>
        <td><%= failure.count %></td>
        <% if current_user == nil %>
        <td><%= failure.user.name %></td>
        <% elsif failure.user.id == current_user.id %>
        <td style="color:red;"><strong> <%= failure.user.name %> </strong></td>
        <% else %>
        <td><%= failure.user.name %></td>
        <% end %>
        <td><%= failure.created_at.getlocal.strftime('%B %d %Y') %></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <!-- <%= link_to 'New Failure', new_failure_path %> -->
</section>
